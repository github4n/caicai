      <!--变换的形式为日期-->

      <rollingStyle value="Date" />

      <!--日期的格式，每天换一个文件记录-->

      <datePattern value="yyyyMMdd&quot;Error.log&quot;" />
      <encoding value="utf-8" />
      <layout type="log4net.Layout.PatternLayout">
      </layout>
    </appender>

    <logger name="InfoLog">
